# SystemC Environments -----------------------------------------
export SYSTEMC			= /usr/local/systemc-3.0.0
export SYSTEMC_HOME		= $(SYSTEMC)
export SYSTEMC_INCLUDE	= $(SYSTEMC_HOME)/include
export SYSTEMC_LIBDIR	= $(SYSTEMC_HOME)/lib-linux64
export LD_LIBRARY_PATH	:=$(LD_LIBRARY_PATH):$(SYSTEMC_LIBDIR)
export CXX				= clang++
export CXXFLAGS			= -std=c++17

# SystemC testbench Reuse --------------------------------------
SC_SRCS	=	../simulation/sc_main.cpp \
			../simulation/sc_fir8_tb.cpp \
			../../0_algorithm/c_untimed/fir8.cpp \
			../../0_algorithm/c_untimed/cnoise.cpp
SC_HDRS =	../simulation/sc_fir8.h \
			../simulation/sc_fir8_tb.h \
			./E_fir_pe.h
SC_INCS =	-I. \
			-I../../0_algorithm/c_untimed \
			-I../simulation 
SC_DEFS =	-DVCD_TRACE_FIR8 \
			-DEMULATED

TOP_MODULE	= fir_pe

# Build Rules --------------------------------------------------
all :
	@echo 'Makefile for Co-Emulation(FPGA) of "FIR8": Splitted IO'
	@echo 'Usage:'
	@echo '    Building'
	@echo '        make emulated'
	@echo '               for Co-Emulation: RTL PE in FPGA Board* with SystemC TB**'
	@echo '                   * Must be configured before running'
	@echo '                  ** Re-used SystemC testbench at "../simulation/sc_fir8.h"'
	@echo '                     & Emulation wrapper driver at "./E_fir_pe.h"'
	@echo ''
	@echo '    Running emulation,'
	@echo '        make run'
	@echo '    Viewing emulation result,'
	@echo '        make wave'
	@echo ''
	@echo '    Clean up working folder,'
	@echo '        make clean'

emulated : $(TOP_MODULE)

$(TOP_MODULE) : $(SC_SRCS) $(SC_TOP_H)
	$(CXX) $(CXXFLAGS) \
		$(SC_DEFS) \
		$(SC_INCS) \
		-I$(SYSTEMC_INCLUDE) \
		-L$(SYSTEMC_LIBDIR) -Wl,-rpath=$(SYSTEMC_LIBDIR) \
		-lsystemc -lm -lgsl \
		-o $(TOP_MODULE) $(SC_SRCS)

run : $(TOP_MODULE)
	./$(TOP_MODULE)

wave :
	../../0_algorithm/sc_timed/sc_plotDFT.py &
	gtkwave sc_fir8.vcd --save=sc_fir8.gtkw &

clean :
	rm -f $(TOP_MODULE)
	rm -f *.vcd
	rm -f ./Vivado/vivado*

debug : $(TARGET_DIR)/$(TARGET)
	ddd $(TARGET_DIR)/$(TARGET)
